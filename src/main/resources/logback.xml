<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console appender with plain text pattern for local development -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console appender with JSON structured logging for production -->
    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</timestampPattern>
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <version>[ignore]</version>
                <levelValue>[ignore]</levelValue>
            </fieldNames>
        </encoder>
    </appender>

    <!-- Application loggers -->
    <logger name="com.teamhub" level="DEBUG"/>

    <!-- Quieten noisy third-party loggers -->
    <logger name="io.vertx" level="INFO"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="org.mongodb" level="WARN"/>

    <!-- Root logger: default to CONSOLE, switch to JSON_CONSOLE via env or profile -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
